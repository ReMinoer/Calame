<UserControl x:Class="Calame.UserControls.PathControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calame.UserControls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="300" d:DataContext="{d:DesignInstance local:PathControl}">
    <DockPanel>
        <Button DockPanel.Dock="Right" Content="..." Click="OnButtonClicked" Width="30" />
        <xctk:PropertyGridEditorTextBox Text="{Binding DisplayedPath, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:PathControl}}, Mode=TwoWay}" />
    </DockPanel>
</UserControl>
